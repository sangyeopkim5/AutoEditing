{
  "id": "com.remotecreator.premierepro",
  "name": "Remote Project Creator",
  "version": "1.0.0",
  "main": "index.html",
  "host": {
    "app": "premierepro",
    "minVersion": "25.6"
  },
  "manifestVersion": 5,
  "featureFlags": {
    "enableAlerts": true
  },
  "requiredPermissions": {
    "localFileSystem": "fullAccess",
    "network": {
      "domains": [
        "ws://localhost:8080",
        "wss://localhost:8080",
        "http://localhost:3000"
      ]
    }
  },
  "entrypoints": [
    {
      "type": "panel",
      "id": "mainPanel",
      "panelId": "mainPanel",
      "label": {
        "default": "Remote Creator",
        "en-US": "Remote Creator",
        "ko-KR": "원격 프로젝트 생성기"
      },
      "minimumSize": {
        "width": 280,
        "height": 350
      },
      "maximumSize": {
        "width": 800,
        "height": 1000
      },
      "preferredDockedSize": {
        "width": 300,
        "height": 400
      },
      "preferredFloatingSize": {
        "width": 350,
        "height": 500
      },
      "icons": [
        {
          "width": 32,
          "height": 32,
          "path": "icons/icon_D.png",
          "scale": [1, 2],
          "theme": ["dark", "darkest"],
          "species": ["generic"]
        },
        {
          "width": 32,
          "height": 32,
          "path": "icons/icon_N.png",
          "scale": [1, 2],
          "theme": ["lightest", "light"],
          "species": ["generic"]
        }
      ]
    }
  ],
  "icons": [
    {
      "width": 32,
      "height": 32,
      "path": "icons/icon_D.png",
      "scale": [1, 2],
      "theme": ["dark", "darkest"],
      "species": ["generic"]
    },
    {
      "width": 32,
      "height": 32,
      "path": "icons/icon_N.png",
      "scale": [1, 2],
      "theme": ["lightest", "light"],
      "species": ["generic"]
    }
  ]
}
